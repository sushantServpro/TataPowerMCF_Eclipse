                <table:template>
                    <Text text="{RegulatoryAssetCharges}"/>
                </table:template>
            </table:Column>
            
            <table:Column id="IdCol10E" headerSpan="1" colspan="1">
                <table:multiLabels >
                    <Label text="Tata Power Net Tariff(Current Year)" design="Bold" wrapping="true" textAlign="Left" width="100%"/>
                    <Label text="₹/kWh" design="Bold" wrapping="true" textAlign="Left" width="100%"/>
