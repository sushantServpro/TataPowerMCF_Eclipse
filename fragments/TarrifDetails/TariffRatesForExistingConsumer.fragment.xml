                </table:template>
            </table:Column>
            
            <table:Column id="IdCol12E" headerSpan="1" colspan="1">
                <table:multiLabels >
                    <Label text="Difference (Current - Previous Year)" design="Bold" wrapping="true" textAlign="Left" width="100%"/>
                    <Label text="₹/kWh" design="Bold" wrapping="true" textAlign="Left" width="100%"/>
                </table:multiLabels>
                <table:template>
                    <Text text="{NetTariffDiff}"/>
                </table:template>
                </table:Column>
                </table:columns>
            </table:Table>
	    </html:div>
	 </html:div>
		
				<html:div class="container-fluid">
					<html:div class="row view_table">
