<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:u="sap.ui.unified" xmlns:tnt="sap.tnt" height="100%"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<Panel >
		<content>
			<Panel>
				<html:div class="container-fluid">
					<html:div class="row middlebox share_feedbk">
						<html:div class="content">
							<html:div class="row">
								<html:div class="col-sm-7 col-md-6">
									<html:div class="row">
										<html:div class="col-sm-6">
											<html:div class="row bill_payment">
												<html:div class="col-xs-12">
													<GenericTile class="tileLayout" press="press">
														<TileContent>
															<content>
																<html:div class="row">
																	<html:div class="col-xs-3">
																		<html:image src="images/myac_online_bill.png" alt="speakers" class="img-repsonsive"></html:image>
																	</html:div>
																	<html:div class="col-xs-9">
																		<html:span>quick bill payment</html:span>
																	</html:div>
																</html:div>
															</content>
														</TileContent>
													</GenericTile>
												</html:div>
											</html:div>
										</html:div>
										<html:div class="col-sm-6">
											<html:div class="row your_bill">
												<html:div class="col-xs-12">
													<GenericTile class="tileLayout" press="press">
														<TileContent>
															<content>
																<html:div class="row">
																	<html:div class="col-xs-3">
																		<html:image src="images/myac_pay_bill.png" alt="myac_pay_bill" class="img-repsonsive"></html:image>
																	</html:div>
																	<html:div class="col-xs-9">
																		<html:span>pay your bill here</html:span>
																	</html:div>
																</html:div>
															</content>
														</TileContent>
													</GenericTile>
												</html:div>
											</html:div>
										</html:div>
									</html:div>
								</html:div>
								<html:div class="col-sm-5 col-md-6 counters">
									<html:div class="row">
										<html:div class="col-xs-4 col-sm-4 text-center">
											<html:span>Consumer Number</html:span>
											<html:h4>1234</html:h4>
										</html:div>
										<html:div class="col-xs-4 col-sm-4 text-center acc_no">
											<html:span>Account Number</html:span>
											<html:h4>1234</html:h4>
										</html:div>
										<html:div class="col-xs-4 col-sm-4 text-center">
											<html:span>Meter Number</html:span>
											<html:h4>1234</html:h4>
										</html:div>
									</html:div>
								</html:div>
							</html:div>
						</html:div>
					</html:div>
				<html:div class="share_ur_feed">
						<html:div class="row">
							<html:h4>Please share your feedback</html:h4>
						</html:div>
						<html:div class="row feedbk_ques">
							<html:div class="container-fluid">
							<html:div class="row quesn">
							<html:div class="col-sm-6">
								<Label text="Consumer Name" labelFor="consm_num"/>
								<Input id="IdConsm_name" editable="false" required="true" placeholder="Enter"/>
							</html:div>
							<html:div class="col-sm-6">
								<Label text=" Account Number" labelFor="consm_num"/>
								<Input id="IdAcc_no" editable="false" required="true" placeholder="Enter"/>
							</html:div> 
							<html:div class="col-sm-6">
								<Label text="Email Id" labelFor="consm_num"/>
								<Input id="IdEmail" required="true" editable="false" placeholder="Enter"/>
							</html:div>
							<html:div class="col-sm-6">
								<Label text="Mobile Number" labelFor="consm_num"/>
								<Input id="IdMob_no" required="true" editable="false" placeholder="Enter"/>
							</html:div> 
							</html:div>
							
							<html:div class="row quesn">
									<html:div class="ques_no">
										<html:h5>
											 "How often" do you use the Tata Power Customer Portal?
											<html:span class="req_star">*</html:span>
										</html:h5>
									</html:div>
									<html:div class="row cat_opt">
										<html:div class="col-sm-3">
											<RadioButton id="RDB_UsageType1" groupName="ques010" text="Daily" selected="true"/>
										</html:div>
										<html:div class="col-sm-3">
											<RadioButton id="RDB_UsageType2" groupName="ques010" text="Weekly"/>
										</html:div>
										<html:div class="col-sm-3">
											<RadioButton id="RDB_UsageType3" groupName="ques010" text="Monthly"/>
										</html:div>
										<html:div class="col-sm-3">
											<RadioButton groupName="ques010" id="RDB_UsageType4" text="As and when required"/>
										</html:div>
									</html:div>
								</html:div>
								
								<html:div class="row quesn">
									<html:div class="ques_no">
										<html:h5>
											 Which of the "following services" of Tata Power Customer Portal you use?
											<html:span class="req_star">*</html:span>
										</html:h5>
									</html:div>
									<html:div class="row ques_ans">
										<html:div class="col-sm-3">
											<CheckBox id="CHB_BillPay" text="Bill Payments" selected="false"/>
										</html:div>
										<html:div class="col-sm-3">
										    <CheckBox id="CHB_ViewNDwn" text="View  Download Bills" selected="false"/>
										</html:div>
										<html:div class="col-sm-3">
											<CheckBox id="CHB_RegComp" text="Registering Complaints" selected="false"/>
										</html:div>
										<html:div class="col-sm-3">
											<CheckBox id="CHB_DSMReg" text="DSM Programme Registration" selected="false"/>
										</html:div>
										<html:div class="col-sm-3">
											<CheckBox id="CHB_TariffInfo" text="Tariff Related Info." selected="false"/>
										</html:div>
										<html:div class="col-sm-3">
											<CheckBox id="CHB_Queries" text="Seeking answers to queries" selected="false"/>
										</html:div>
										<html:div class="col-sm-3">
											<CheckBox id="CHB_Others" text="Others" selected="false"/>
										</html:div>
									</html:div>
								</html:div>
								
								<html:div class="row quesn">
									<html:div class="ques_no">
										<html:h5>
											Kindly rate us on the Look and Feel of our existing Customer Portal?
											<html:span class="req_star">*</html:span>
										</html:h5>
									</html:div>
									<html:div class="row ques_ans">
										<html:div class="col-sm-3">
											<RadioButton id="RDB_LookFeel1" groupName="ques1" text="Very Difficult" selected="true"/>
											<html:span class="feed_img">
												<html:image src="images/red_smile.png" alt="be_green_banner"></html:image>
											</html:span>
										</html:div>
										<html:div class="col-sm-3">
											<RadioButton id="RDB_LookFeel2" groupName="ques1" text="Difficult"/>
											<html:span class="feed_img">
												<html:image src="images/yellow_smile.png" alt="be_green_banner"></html:image>
											</html:span>
										</html:div>
										<html:div class="col-sm-3">
											<RadioButton groupName="ques1" id="RDB_LookFeel3" text="Easy"/>
											<html:span class="feed_img">
												<html:image src="images/blue_smile.png" alt="be_green_banner"></html:image>
											</html:span>
										</html:div>
										<html:div class="col-sm-3">
											<RadioButton groupName="ques1" text="Very Easy" id="RDB_LookFeel4"/>
											<html:span class="feed_img">
												<html:image src="images/green_smile.png" alt="be_green_banner"></html:image>
											</html:span>
										</html:div>
									</html:div>
								</html:div>
								<html:div class="row quesn">
									<html:div class="ques_no">
										<html:h5>
											 Kindly rate us on the Ease of Navigation on Tata Power Customer Portal?
											<html:span class="req_star">*</html:span>
										</html:h5>
									</html:div>
									<html:div class="row ques_ans">
										<html:div class="col-sm-3">
											<RadioButton id="RDB_EaseNav1" groupName="ques2" text="Very Difficult"/>
											<html:span class="feed_img">
												<html:image src="images/red_smile.png" alt="be_green_banner"></html:image>
											</html:span>
										</html:div>
										<html:div class="col-sm-3">
											<RadioButton id="RDB_EaseNav2" groupName="ques2" text="Difficult" selected="true"/>
											<html:span class="feed_img">
												<html:image src="images/yellow_smile.png" alt="be_green_banner"></html:image>
											</html:span>
										</html:div>
										<html:div class="col-sm-3">
											<RadioButton groupName="ques2" id="RDB_EaseNav3" text="Easy"/>
											<html:span class="feed_img">
												<html:image src="images/blue_smile.png" alt="be_green_banner"></html:image>
											</html:span>
										</html:div>
										<html:div class="col-sm-3">
											<RadioButton groupName="ques2" text="Very Easy" id="RDB_EaseNav4"/>
											<html:span class="feed_img">
												<html:image src="images/green_smile.png" alt="be_green_banner"></html:image>
											</html:span>
										</html:div>
									</html:div>
								</html:div>
							</html:div>
						</html:div>
						<html:div class="row form_row">
							<html:div class="col-sm-12">
								<html:div class="feed_category">
									<Label text="We shall be keen to hear from you any suggestions?" />
									<TextArea id="SuggestBoxId" rows ="3" maxLength="250" width="100%" placeholder="Enter"/>
								</html:div>
							</html:div>
						</html:div>
						<html:div class="row form_row">
							<html:div class="col-md-2 col-md-offset-4">
								<Button text="SUBMIT" press="onSubmitFeedback" class="switchcenter form-control" ariaDescribedBy="defaultButtonDescription genericButtonDescription"></Button>
							</html:div>
							<html:div class="col-md-2">
								<Button text="NOT NOW" press="onPress" class="switchcenter form-control" ariaDescribedBy="defaultButtonDescription genericButtonDescription"></Button>
							</html:div>
						</html:div>
					</html:div>
				</html:div>
			</Panel>
		</content>
	</Panel>
</core:FragmentDefinition>