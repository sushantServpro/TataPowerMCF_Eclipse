<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"> 
	<TableSelectDialog
		noDataText="No Data Found"
		title="Search: Lane/Street"
		search="_handleValueHelpSearch"
		confirm="_handleValueHelpClose"
		close="_handleValueHelpClose"
		items="{path: 'LaneStreet>/results'}">
		<ColumnListItem>
			<cells>
				<Text text="{LaneStreet>StrtCode}" />
				<Text text="{LaneStreet>Street}" />
				<Text text="{LaneStreet>CityPart}" />
				<Text text="{LaneStreet>CityName}" />
			</cells>
		</ColumnListItem>
		<columns>
			<Column width="12em">
				<header>
					<Text text="Street Code" />
				</header>
			</Column>
			<Column
				minScreenWidth="Tablet"
				demandPopin="true" >
				<header>
					<Text text="Street" />
				</header>
			</Column>
			<Column
				minScreenWidth="Tablet"
				demandPopin="true">
				<header>
					<Text text="Suburban" />
				</header>
			</Column>
			<Column
				minScreenWidth="Tablet"
				demandPopin="true">
				<header>
					<Text text="City" />
				</header>
			</Column>
		</columns>
	</TableSelectDialog>
</core:FragmentDefinition>