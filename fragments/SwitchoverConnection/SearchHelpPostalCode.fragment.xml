<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<TableSelectDialog
		noDataText="No Data Found"
		title="Search: Postal Code"
		search="_handleValueHelpSearch3"
		confirm="_handleValueHelpClose3"
		close="_handleValueHelpClose3"
		items="{path: 'PostalCode>/results'}">
		<ColumnListItem>
			<cells>
				<Text text="{PostalCode>PostCode}" />
				<Text text="{PostalCode>CityPart}" />
				<Text text="{PostalCode>CityName}" />
			</cells>
		</ColumnListItem>
		<columns>
			<Column
				minScreenWidth="Tablet"
				demandPopin="true">
				<header>
					<Text text="Postal Code" />
				</header>
			</Column> 
			<Column
				minScreenWidth="Tablet"
				demandPopin="true">
				<header>
					<Text text="Suburban" />
				</header>
			</Column>
			<Column
				minScreenWidth="Tablet"
				demandPopin="true">
				<header>
					<Text text="City" />
				</header>
			</Column>
		</columns>
	</TableSelectDialog>
</core:FragmentDefinition>