<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="tatapower.dev.controller.NewUserRegister"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<pages>
			<Page>
				<content>
					<core:Fragment fragmentName="tatapower.dev.fragments.Main.HeaderMain" type="XML"/>
					<html:div class="container-fluid">
						<html:div class="row">
							<html:div class="row">
								<Label class="col-md-4" text="User Name" labelFor="input-a"/>
								<html:div class="col-md-4"><Input id="username" required="true" type="Text" class="sapUiSmallMarginBottom"/>
								</html:div>
							</html:div>
							<html:div class="row">
								<Label class="col-md-4" text="CA Number" labelFor="input-a"/>
								<html:div class="col-md-4"><Input id="idcano" required="true" type="Text" class="sapUiSmallMarginBottom"/>
								</html:div>
							</html:div>
							<html:div class="row">
								<Label class="col-md-4" text="Account Number" labelFor="input-a"/>
								<html:div class="col-md-4"><Input id="idaccno" required="true" type="Text" class="sapUiSmallMarginBottom"/>
								</html:div>
							</html:div>
							<html:div class="row">
								<Label class="col-md-4" text="First Name" labelFor="input-a"/>
								<html:div class="col-md-4"><Input id="idfname" required="true" type="Text" class="sapUiSmallMarginBottom"/>
								</html:div>
							</html:div>
							<html:div class="row">
								<Label class="col-md-4" text="Last Name" labelFor="input-a"/>
								<html:div class="col-md-4"><Input id="idlname" required="true" type="Text" class="sapUiSmallMarginBottom"/>
								</html:div>
							</html:div>
							<html:div class="row">
								<Label class="col-md-4" text="Email Address " labelFor="input-a"/>
								<html:div class="col-md-4"><Input id="idemail" required="true" type="Text" class="sapUiSmallMarginBottom"/>
								</html:div>
							</html:div>
							<html:div class="row">
								<Label class="col-md-4" text="Phone Number" labelFor="input-a"/>
								<html:div class="col-md-4"><Input id="idphnno" required="true" type="Text" class="sapUiSmallMarginBottom"/>
								</html:div>
							</html:div>
							<html:div class="row">
								<Label class="col-md-4" text="User Category" labelFor="input-a"/>
								<html:div class="col-md-4"><Input id="idusrcat" required="true" type="Text" class="sapUiSmallMarginBottom"/>
								</html:div>
							</html:div>
							<html:div class="row">
								<Label class="col-md-4" text="Password" labelFor="input-a"/>
								<html:div class="col-md-4"><Input id="idpassword" required="true" type="Password" class="sapUiSmallMarginBottom"/>
								</html:div>
							</html:div>
							<html:div class="row">
								<Label class="col-md-4" text="Confirm Password" labelFor="input-a"/>
								<html:div class="col-md-4"><Input id="idcpassword" required="true" type="Password" class="sapUiSmallMarginBottom"/>
								</html:div>
							</html:div>
							<html:div class="row">
								<html:div class="col-md-3">
									<Button text="Register" press="onRegister" class="switchcenter" ariaDescribedBy="defaultButtonDescription genericButtonDescription"></Button>
								</html:div>
								<html:div class="col-md-3">
									<Button text="Reset" press="onReset" class="switchcenter" ariaDescribedBy="defaultButtonDescription genericButtonDescription"></Button>
								</html:div>
							</html:div>
						</html:div>
					</html:div>
					<core:Fragment fragmentName="tatapower.dev.fragments.Main.Footer" type="XML"/>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>